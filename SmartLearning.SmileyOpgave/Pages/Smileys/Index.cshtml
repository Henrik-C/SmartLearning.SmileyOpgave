@page
@model SmartLearning.SmileyOpgave.Pages.Smileys.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Cvr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CurrentSmileyRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].DateForLatestSmiley)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Cvr
            </td>
            <td>
                @switch (item.CurrentSmileyRating)
                {
                    case Models.Company.SmileyRating.Happy:
                        <img src="~/images/Sm1bg.jpg" style="max-width:50px;width:100%" />
                        break;
                    case Models.Company.SmileyRating.Balanced:
                        <img src="~/images/Sm3bg.jpg" style="max-width:50px;width:100%" />
                        break;
                    case Models.Company.SmileyRating.Sad:
                        <img src="~/images/Sm4bg.jpg" style="max-width:50px;width:100%" />
                        break;
                }
            </td>
            <td>
                @item.DateForLatestSmiley
            </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Læs mere...</a>
                </td>
        </tr>

}
    </tbody>
</table>
